<?xml version="1.0" encoding="utf-8" ?>
<!-- Views/DashboardPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:FlashcardViewer.Views"
             x:Class="FlashcardViewer.Views.DashboardPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="AddButtonStyle" TargetType="Button">
                <Setter Property="Text" Value="Add" />
                <Setter Property="BackgroundColor" Value="LightGreen" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="Medium" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="Margin" Value="10" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout>
        <Label Text="Dashboard" FontSize="24" HorizontalOptions="Center" />
        <Label x:Name="StorageModeLabel" Text="{Binding storageModeText}"/>
        <Button x:Name="AddSetButton" Style="{StaticResource AddButtonStyle}" Clicked="OnAddSetButtonClicked" />
        <ContentView x:Name="SetListViewContainer" />
    </StackLayout>
</ContentPage>
