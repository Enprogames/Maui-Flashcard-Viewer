<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="FlashcardViewer.Resources.Themes.DarkTheme">

    <Color x:Key="Primary">#71627a</Color>
    <Color x:Key="Secondary">#5b4965</Color>
    <Color x:Key="Tertiary">#3d354b</Color>
    <Color x:Key="BackgroundColor">#2e293a</Color>
    <Color x:Key="TextColor">#FFFFFF</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{DynamicResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{DynamicResource Tertiary}"/>
    
</ResourceDictionary>